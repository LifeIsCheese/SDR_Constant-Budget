    Q.unemployed -= Q.economic_growth;
    if (Q.works_program) {
        Q.unemployed -= (Q.economic_growth/2);
    }
} else if (Q.unemployed >= 20) {
    Q.unemployed -= 2;
    if (Q.works_program) {
        Q.unemployed -= 1;
    }
    if (Q.unemployed >= 25) {
        Q.unemployed -= 1;
    }
} else {
